{
  "name": "poligono-ai-hub",
  "version": "1.0.2",
  "description": "AI-powered vocal removal & splitter tool for audio and video files",
  "main": "src/background.js",
  "author": "Polígono Studio",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {},
  "build": {
    "appId": "com.poligonostudio.aihub",
    "productName": "Polígono AI Hub",
    "copyright": "Copyright © 2024 Polígono Studio",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "!src/**/*.map",
      "!**/*.{ts,tsx}",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist/motor",
        "to": "motor",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Polígono AI Hub",
      "installerIcon": "src/renderer/assets/icon.ico",
      "uninstallerIcon": "src/renderer/assets/icon.ico",
      "installerHeaderIcon": "src/renderer/assets/icon.ico",
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/assets/logo.icns",
      "category": "public.app-category.music",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/assets/icons",
      "category": "Audio",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": null
  }
}
